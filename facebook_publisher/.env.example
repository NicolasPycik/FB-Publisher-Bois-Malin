# Facebook Publisher Bois Malin - Environment Variables
# Copy this file to .env and fill in your actual values

# Facebook App Configuration
APP_ID=your_facebook_app_id_here
APP_SECRET=your_facebook_app_secret_here

# User Access Token (can be short-term, will be exchanged for long-term)
USER_ACCESS_TOKEN=your_user_access_token_here

# Optional: System User Token for advanced features
SYSTEM_USER_TOKEN=your_system_user_token_here

# API Configuration
FACEBOOK_API_VERSION=v18.0
FACEBOOK_BASE_URL=https://graph.facebook.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=facebook_api.log

# Application Configuration
DATA_DIR=./data
SCHEDULER_INTERVAL=60

